	Если ПлатформаПоддерживаетТаймаутыСети() Тогда
		Параметры.Добавить(Таймаут);
	КонецЕсли;
	
	Прокси = Новый(Тип("WSПрокси"), Параметры);
	Прокси.Пользователь = ИмяПользователя;
	Прокси.Пароль = Пароль;
	

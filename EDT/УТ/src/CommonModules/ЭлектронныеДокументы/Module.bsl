			ОбщегоНазначения.СообщитьОбОшибке("Ошибка добавления файла к документу: " + Строка(СсылкаДокументаРезультата) + " " + ОписаниеОшибки());							
							
		КонецПопытки;
		
	КонецЦикла;
		


&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Элементы.Список.РежимВыбора = Истина;
	
	ДатаРедактирования = Параметры.ДатаРедактирования;
	Терминал = Параметры.Терминал;
	
	Список.Параметры.УстановитьЗначениеПараметра("ДатаРедактирования", ДатаРедактирования);
	Список.Параметры.УстановитьЗначениеПараметра("Терминал", Терминал);
	Список.Параметры.УстановитьЗначениеПараметра("ВыбранныеФизЛица", Параметры.ВыбранныеФизЛица.ВыгрузитьЗначения());
	
	Список.Параметры.УстановитьЗначениеПараметра("Состояние", Перечисления.СостояниеРаботникаОрганизации.ПринятНаРаботуВОрганизацию);
	
	Если Не Параметры.ТекущийЭлемент.Пустая() Тогда
		Элементы.Список.ТекущаяСтрока = Параметры.ТекущийЭлемент;
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Процедура УволенныеСотрудникиНаСервере()
	
	Элементы.СписокУволенныеСотрудники.Пометка = Не Элементы.СписокУволенныеСотрудники.Пометка;
	Если Элементы.СписокУволенныеСотрудники.Пометка Тогда
		Список.Параметры.УстановитьЗначениеПараметра("Состояние", Перечисления.СостояниеРаботникаОрганизации.Уволен);
	Иначе
		Список.Параметры.УстановитьЗначениеПараметра("Состояние", Перечисления.СостояниеРаботникаОрганизации.ПринятНаРаботуВОрганизацию);
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура УволенныеСотрудники(Команда)
	УволенныеСотрудникиНаСервере();
КонецПроцедуры

&НаКлиенте
Процедура СписокВыборЗначения(Элемент, Значение, СтандартнаяОбработка)
	
	ОповеститьОВыборе(Значение);
	
КонецПроцедуры

			Мета = "Метаданные.Регистры" + Сред(СтрокаТаблХранения.Метаданные, 8);
			Если Не ПустаяСтрока(СтрокаПоляХранения.ИмяПоля) Тогда
				Поле = Вычислить(Мета + ".Измерения.Найти(""" + СтрокаПоляХранения.ИмяПоля + """)");

			Отказ = Истина;
			Сообщить("Типы значений в строке " + СтрокаПоказателя.НомерСтроки +  " не совпадают: Значение1 - " + ТипЗначения1 + ", Значение2 - " + ТипЗначения2);
		КонецЕсли
	КонецЦикла;
	

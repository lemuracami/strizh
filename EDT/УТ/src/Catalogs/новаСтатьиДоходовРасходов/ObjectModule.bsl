
Процедура ПередЗаписью(Отказ)
	
	Если ОбменДанными.Загрузка Тогда
		Возврат;
	КонецЕсли;	
	
	Если Ссылка = Справочники.новаСтатьиДоходовРасходов.Доходы Тогда
		Доход = Истина;
		Возврат;
		
	ИначеЕсли Ссылка = Справочники.новаСтатьиДоходовРасходов.Расходы Тогда
		Доход = Ложь;
		Возврат;
	
	КонецЕсли;
	
	Если ЗначениеЗаполнено(Родитель) Тогда
		Если Родитель.Доход <> Доход Тогда
			Родитель = ?(Доход, Справочники.новаСтатьиДоходовРасходов.Доходы, Справочники.новаСтатьиДоходовРасходов.Расходы);
		КонецЕсли;
	Иначе
		Родитель = ?(Доход, Справочники.новаСтатьиДоходовРасходов.Доходы, Справочники.новаСтатьиДоходовРасходов.Расходы);
	КонецЕсли;

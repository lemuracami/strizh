
Процедура ПриЗаписи(Отказ)
	
	Если ОбменДанными.Загрузка Тогда
		Возврат;
	КонецЕсли;	
	
	Если Флажок Тогда
		Запрос = Новый Запрос;
		Запрос.Текст = "ВЫБРАТЬ
		|	КОЛИЧЕСТВО (*) КАК Количество
		|ИЗ
		|	Справочник.новаЗначенияКатегорийТранспорта
		|
		|ГДЕ
		|	Владелец = &Категория";
		
		Запрос.УстановитьПараметр("Категория", Ссылка);
		
		Если Запрос.Выполнить().Выгрузить()[0].Количество = 0 Тогда
			обЗначение = Справочники.новаЗначенияКатегорийТранспорта.СоздатьЭлемент();			
			обЗначение.Наименование = "Есть";
			обЗначение.Владелец = Ссылка;
			обЗначение.Записать();
		КонецЕсли;
	КонецЕсли;
КонецПроцедуры

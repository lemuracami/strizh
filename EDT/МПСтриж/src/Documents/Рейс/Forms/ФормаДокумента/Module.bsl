&НаСервере
Процедура УстановитьОбщийНомерТелефонаДляЗаказовНаСервере()
	// Вставить содержимое обработчика.
	Зап = Новый Запрос;
	
	Зап.Текст = "ВЫБРАТЬ
	            |	Заказ.Ссылка КАК Заказ
	            |ИЗ
	            |	Документ.Заказ КАК Заказ
	            |ГДЕ
	            |	Заказ.Рейс = &Рейс
	            |	И Заказ.ТипЗаказа = ЗНАЧЕНИЕ(Перечисление.ТипЗаказа.Доставка)
	            |	И Заказ.СнятьСДоставки = ЛОЖЬ
	            |	И Заказ.РезультатДоставки = ЗНАЧЕНИЕ(справочник.результатыДоставки.КДоставке)";
	
	
	Зап.УстановитьПараметр("Рейс", Объект.Ссылка);
	
	Выб = Зап.Выполнить().Выбрать();
	
	Пока Выб.Следующий() Цикл
		Заказ = Выб.Заказ.ПолучитьОбъект();
		Заказ.Телефон = "+79160801884";
		
		Заказ.Записать(РежимЗаписиДокумента.Запись);
	КонецЦикла;	
КонецПроцедуры


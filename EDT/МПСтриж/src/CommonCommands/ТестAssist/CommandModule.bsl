Процедура ОбработкаКоманды(ПараметрКоманды, ПараметрыВыполненияКоманды)
	Струк = Новый Структура;
	Стр = "";
	ВвестиСтроку(Стр, "Введите номер заказа");
	Если Не ЗначениеЗаполнено(Стр) Тогда
		Предупреждение("Номер заказа не может быть пустым!");
		Возврат;
	КонецеСли;	
	Сум = 0;
	ВвестиЧисло(Сум, "Введите сумму оплаты", 5, 2);
	Если Не ЗначениеЗаполнено(Сум) Тогда
		Предупреждение("Сумма не может быть равной 0!");
		Возврат;
	КонецеСли;	
	
	мерчант = "";
	ВвестиСтроку(мерчант, "Введите id merchant");
	Если Не ЗначениеЗаполнено(мерчант) Тогда
		Предупреждение("id merchant не может быть пустым!");
		Возврат;
	КонецеСли;
	
	login = "";
	ВвестиСтроку(login, "Введите логин");
	Если Не ЗначениеЗаполнено(login) Тогда
		Предупреждение("Логин не может быть пустым!");
		Возврат;
	КонецеСли;	
	
	password = "";
	ВвестиСтроку(password, "Введите пароль");
	Если Не ЗначениеЗаполнено(password) Тогда
		Предупреждение("Пароль не может быть пустым!");
		Возврат;
	КонецеСли;	
	
	
	Струк.Вставить("ordernum", Стр);
	Струк.Вставить("amount", Сум);
	//Струк.Вставить("merchant_id", 778533);
	Струк.Вставить("merchant_id", мерчант);
	//Струк.Вставить("login", "life_mobile");
	//Струк.Вставить("password", "lifE2mobile");
	Струк.Вставить("login", login);
	Струк.Вставить("password", password);
	СтрокаJSON = МодульОбмен_http.СформироватьСтрокуJSON(Струк);
	ИнтеграцияAssistКлиент.ВызватьПрослойкуAssist(СтрокаJSON);
	
КонецПроцедуры
